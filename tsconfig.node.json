{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "ES2015"], 
    "module": "ESNext",
    "skipLibCheck": true,
    "jsx": "react-jsx"
,    "allowSyntheticDefaultImports": true,

    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, 
    "outDir": "./dist",  
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true
  },
  "include": ["vite.config.ts"]
}
